{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "jest"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "no-unexpected-multiline":"off",
        "no-unused-vars": [
            "warn",
            { "argsIgnorePattern": "^next$" }
        ]
    }
}