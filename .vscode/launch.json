    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "babel-node",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
            "program": "${workspaceFolder}/src/app.js",
